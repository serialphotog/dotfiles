# ls
alias ls='ls --color=auto'
alias la='ls -A --color=auto'
alias ll='ls -lahf --color=auto'
alias lsl='ls -lhF --color=auto'

# cd
alias ..='cd ..'
alias ...'cd ../..'
alias ....='cd ../../..'
alias ~='cd ~'

# cp
alias cp='cp -r'

# mkdir
alias mkdir='mkdir -p'

# grep
alias grep='grep --color=auto'

# Reload the config easily
alias r!='source ~/.zshrc'
